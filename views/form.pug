extends layout

block content
    h2 Create a new message
    form(action="/new", method="post") 
        ul
            li
                label(for='message_name') Name
                input(type='text' name='message_name' id='message_name')
            li
                label(for='message_text') Message
                textarea#message_text(name="message_text", cols="30", rows="10")
        button(type="submit") Send Message